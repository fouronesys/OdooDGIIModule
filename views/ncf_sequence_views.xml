<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- NCF Sequence Form View -->
    <record id="view_ncf_sequence_form" model="ir.ui.view">
        <field name="name">ncf.sequence.form</field>
        <field name="model">ncf.sequence</field>
        <field name="arch" type="xml">
            <form string="NCF Sequence">
                <header>
                    <button name="action_reactivate" string="Reactivate" type="object" 
                            class="btn-primary" attrs="{'invisible': [('state', '!=', 'inactive')]}"/>
                    <button name="action_deactivate" string="Deactivate" type="object" 
                            class="btn-secondary" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,inactive,expired,depleted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_ncf_assignment_from_sequence)d" type="action"
                                class="oe_stat_button" icon="fa-list">
                            <field name="used_numbers" widget="statinfo" string="Used"/>
                        </button>
                    </div>
                    
                    <!-- Alert banners -->
                    <div class="alert alert-warning" role="alert" 
                         attrs="{'invisible': [('is_expiring_soon', '=', False)]}">
                        <strong>Warning:</strong> This NCF sequence will expire in 
                        <field name="days_to_expiry"/> days.
                    </div>
                    
                    <div class="alert alert-danger" role="alert" 
                         attrs="{'invisible': [('is_low_availability', '=', False)]}">
                        <strong>Alert:</strong> This NCF sequence has low availability 
                        (<field name="percentage_used" widget="percentage"/> used).
                    </div>
                    
                    <group>
                        <group name="basic_info">
                            <field name="prefix" attrs="{'readonly': [('state', 'in', ['expired', 'depleted'])]}"/>
                            <field name="document_type" attrs="{'readonly': [('state', 'in', ['expired', 'depleted'])]}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group name="sequence_info">
                            <field name="current_number" attrs="{'readonly': [('state', 'in', ['expired', 'depleted'])]}"/>
                            <field name="start_number" attrs="{'readonly': [('state', 'in', ['expired', 'depleted'])]}"/>
                            <field name="end_number" attrs="{'readonly': [('state', 'in', ['expired', 'depleted'])]}"/>
                        </group>
                    </group>
                    
                    <group>
                        <group name="dates">
                            <field name="start_date" attrs="{'readonly': [('state', 'in', ['expired', 'depleted'])]}"/>
                            <field name="expiry_date" attrs="{'readonly': [('state', 'in', ['expired', 'depleted'])]}"/>
                        </group>
                        <group name="statistics">
                            <field name="available_numbers"/>
                            <field name="percentage_used" widget="percentage"/>
                            <field name="days_to_expiry"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="NCF Assignments" name="assignments">
                            <field name="assignment_ids" readonly="1">
                                <tree>
                                    <field name="ncf_number"/>
                                    <field name="invoice_id"/>
                                    <field name="partner_id"/>
                                    <field name="invoice_amount" sum="Total"/>
                                    <field name="assignment_date"/>
                                    <field name="invoice_state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- NCF Sequence Tree View -->
    <record id="view_ncf_sequence_tree" model="ir.ui.view">
        <field name="name">ncf.sequence.tree</field>
        <field name="model">ncf.sequence</field>
        <field name="arch" type="xml">
            <tree string="NCF Sequences" decoration-warning="is_expiring_soon" 
                  decoration-danger="is_low_availability" decoration-muted="state in ['expired', 'depleted']">
                <field name="prefix"/>
                <field name="document_type"/>
                <field name="current_number"/>
                <field name="end_number"/>
                <field name="available_numbers"/>
                <field name="percentage_used" widget="percentage"/>
                <field name="expiry_date"/>
                <field name="days_to_expiry"/>
                <field name="state" widget="badge" decoration-success="state=='active'" 
                       decoration-warning="state=='inactive'" decoration-danger="state in ['expired','depleted']"/>
                <field name="is_expiring_soon" invisible="1"/>
                <field name="is_low_availability" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- NCF Sequence Search View -->
    <record id="view_ncf_sequence_search" model="ir.ui.view">
        <field name="name">ncf.sequence.search</field>
        <field name="model">ncf.sequence</field>
        <field name="arch" type="xml">
            <search string="Search NCF Sequences">
                <field name="prefix"/>
                <field name="document_type"/>
                <field name="state"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Expiring Soon" name="expiring_soon" 
                        domain="[('is_expiring_soon', '=', True)]"/>
                <filter string="Low Availability" name="low_availability" 
                        domain="[('is_low_availability', '=', True)]"/>
                <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                <filter string="Depleted" name="depleted" domain="[('state', '=', 'depleted')]"/>
                <group expand="0" string="Group By">
                    <filter string="Document Type" name="group_document_type" 
                            context="{'group_by': 'document_type'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" 
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for NCF Sequences -->
    <record id="action_ncf_sequence" model="ir.actions.act_window">
        <field name="name">NCF Sequences</field>
        <field name="res_model">ncf.sequence</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first NCF sequence!
            </p>
            <p>
                NCF sequences manage the automatic assignment of tax compliance numbers
                to your invoices. Each sequence has a prefix and number range with expiry dates.
            </p>
        </field>
    </record>

    <!-- Action for NCF Assignments from Sequence -->
    <record id="action_ncf_assignment_from_sequence" model="ir.actions.act_window">
        <field name="name">NCF Assignments</field>
        <field name="res_model">ncf.assignment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_sequence_id': active_id}</field>
        <field name="domain">[('sequence_id', '=', active_id)]</field>
    </record>

</odoo>
