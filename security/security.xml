<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- NCF Management Groups -->
    <record id="group_ncf_user" model="res.groups">
        <field name="name">NCF User</field>
        <field name="category_id" ref="base.module_category_accounting"/>
        <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="comment">Users can view NCF information and assignments</field>
    </record>

    <record id="group_ncf_manager" model="res.groups">
        <field name="name">NCF Manager</field>
        <field name="category_id" ref="base.module_category_accounting"/>
        <field name="implied_ids" eval="[(4, ref('group_ncf_user')), (4, ref('account.group_account_manager'))]"/>
        <field name="comment">Users can manage NCF sequences and configuration</field>
    </record>

    <!-- Record Rules -->
    
    <!-- NCF Sequence Access Rule -->
    <record id="ncf_sequence_access_rule" model="ir.rule">
        <field name="name">NCF Sequence: full access</field>
        <field name="model_id" ref="model_ncf_sequence"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="global" eval="True"/>
    </record>

    <!-- NCF Assignment Access Rule -->
    <record id="ncf_assignment_access_rule" model="ir.rule">
        <field name="name">NCF Assignment: full access</field>
        <field name="model_id" ref="model_ncf_assignment"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="global" eval="True"/>
    </record>

</odoo>
